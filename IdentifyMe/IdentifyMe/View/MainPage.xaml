                             Title="Connections"
                             ios:NavigationPage.PrefersLargeTitles="true"/>
    <profile:Profile Icon="Notification.png"
                     Title="Notification"
                     ios:NavigationPage.PrefersLargeTitles="true"/>
    <setting:Setting Icon="Setting.png"
                     Title="Setting"
                     ios:NavigationPage.PrefersLargeTitles="true" />-->
</TabbedPage>
